<p style="color: green"><%= notice %></p>
<h1 class="mb-4 text-3xl font-black">Categories</h1>
<div id="categories">
  <%= render 'shared/category_table' do %>
    <% @categories.each do |category| %>
      <%= render category %>
    <% end %>
  <% end %>
</div>
<div class="mt-3">
  <%= link_to "Add category", new_category_path, class: "btn-secondary" %>
</div>
