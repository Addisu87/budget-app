<tr class="bg-gray-800 ">
  <td class="p-3 flex justify-evenly" >
    <div class="flex">
      <%= link_to category_purchases_path(category_id: category.id) do %>
        <%= category.icon %>
        <%= fa_icon "chevron-circle-right", class: "text-slate-100" %>
      <% end %>
    </div>
  </td>
  <td class="p-3">
    <p><%= category.name %></p>
    <strong><%= category.total_purchases_amount %></strong>
  </td>
  <td>
    <span><strong><%= category.total_purchases %></strong></span>
  </td>
  <td class="p-3">
    <ul class="text-gray-400 hover:text-gray-100 ml-2 flex">
      <li class="material-icons-round text-base">
        <%= link_to fa_icon("eye"), category, class: "btn-secondary" %>
      </li>
      | 
      <li >
        <%= link_to fa_icon("trash"), category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-destroy" %>
      </li>
    </ul>
  </td>
</tr>
