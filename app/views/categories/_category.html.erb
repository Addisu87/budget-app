<div id="<%= dom_id category %>">
  <div class="p-10">
    <table class="min-w-full table-auto">
      <thead class="bg-gray-800 text-gray-300" >
        <tr>
          <th>Name</th>
          <th>Icon</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr class="odd:bg-gray even:bg-blue-100">
          <td><%= category.name %></td>
          <td><%= category.icon %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-destroy" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
