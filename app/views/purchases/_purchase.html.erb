<tr class="bg-gray-800">
  <td class="p-3"><%= purchase.name %></td>
  <td class="p-3 font-bold">$<%= purchase.amount %></td>
  <td class="p-3"> <%= purchase.category_id %></td>
  <td class="p-3 flex">
    <a href="#" class="text-gray-400 hover:text-gray-100 mr-2">
      <%= link_to fa_icon("eye"), category_purchase_path(purchase.category_id, purchase.id), class: "btn-secondary" %>
    </a>
    | 
    <a href="#" class="text-gray-400 hover:text-gray-100 mr-2">
      <%= link_to fa_icon("trash"), category_purchase_path(purchase.category_id, purchase.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-destroy" %>
    </a>
  </td>
</tr>
